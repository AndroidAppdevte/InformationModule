<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorWhite"
        android:paddingRight="13dp">

        <TextView
            android:id="@+id/financial_live_top_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_13"
            android:drawableLeft="@mipmap/financial_live_time"
            android:drawablePadding="@dimen/dp_6"
            android:textSize="@dimen/sp_14"
            android:textColor="#555555"
            android:visibility="gone"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <LinearLayout
                android:id="@+id/live_item1_line"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_15"
                android:orientation="vertical">

                <TextView
                    android:layout_width="0.5dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center_horizontal"
                    android:background="#e3e3e3"
                    tools:ignore="Suspicious0dp"/>

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:src="@drawable/circle_red_big"/>

                <TextView
                    android:layout_width="0.5dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:background="#e3e3e3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_5">

                <TextView
                    android:id="@+id/live_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="00:00:00"
                    android:textColor="#888888"
                    android:textSize="12dp" />

                <LinearLayout
                    android:id="@+id/live_item1_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_information_live"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:layout_toRightOf="@+id/live_item1_line"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/live_content"
                        android:background="@drawable/live_bg3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="13dp"
                        android:lineSpacingExtra="3dp"
                        android:text=""
                        android:textColor="@color/color_black_light"
                        android:textSize="13sp" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</layout>