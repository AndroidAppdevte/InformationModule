<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data></data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:background="@drawable/circle_white_none"
        android:layout_width="222dp"
        android:layout_height="200dp">

        <RelativeLayout
            android:layout_width="222dp"
            android:layout_height="140dp" >
            <ImageView
                android:id="@+id/item_image"
                android:src="@mipmap/no_data_img"
                android:scaleType="fitXY"
                android:layout_width="222dp"
                android:layout_height="140dp" />

            <TextView
                android:text="早盘"
                android:textSize="10sp"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:layout_margin="5dp"
                android:textColor="@color/color_white"
                android:background="@color/color_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>


        <TextView
            android:id="@+id/item_name"
            android:text="浦发银行"
            android:paddingLeft="9dp"
            android:paddingRight="5dp"
            android:paddingTop="8dp"
            android:textSize="13sp"
            android:textColor="@color/color_black_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/item_time"
                android:drawableLeft="@mipmap/icon_luck"
                android:text="2016.10.23"
                android:textSize="10sp"
                android:gravity="center_vertical"
                android:textColor="@color/color_black_dark"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/item_see"
                android:text="2016"
                android:drawableLeft="@mipmap/icon_eyes"
                android:drawablePadding="3dp"
                android:textSize="10sp"
                android:gravity="center_vertical"
                android:textColor="@color/color_black_dark"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />


        </LinearLayout>

    </LinearLayout>
</layout>
