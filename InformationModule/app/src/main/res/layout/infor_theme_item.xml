<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data></data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rootView"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:background="@color/color_line5"
            android:layout_width="match_parent"
            android:layout_height="5dp" />
        <LinearLayout
            android:id="@+id/item_normal"
            android:background="@color/colorWhite"
            android:padding="12dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="117dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/item_image"
                android:background="@mipmap/infor_item_nodate"
                android:layout_width="138dp"
                android:scaleType="fitXY"
                android:layout_height="match_parent" />

            <LinearLayout
                android:paddingLeft="10dp"
                android:paddingBottom="3dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/item_tilte"
                    android:text="【第一百伍拾肆期】继续关注水继续关注水继续关注水继续关注水"
                    android:textSize="17sp"
                    android:lineSpacingExtra="5dp"
                    android:maxLines="2"
                    android:textColor="@color/color_black_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/item_content"
                        android:text="关联行业与板块："
                        android:singleLine="true"
                        android:textSize="12sp"
                        android:gravity="right|center_vertical"
                        android:textColor="@color/color_black_mid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/item_tag1"
                        android:text="大盘分析 "
                        android:textSize="9sp"
                        android:padding="3dp"
                        android:textColor="#888888"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/item_tag2"
                        android:visibility="gone"
                        android:text="大盘分析 "
                        android:textSize="10dp"
                        android:padding="3dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/color_red"
                        android:background="@drawable/coner_circle_red2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>


                <TextView
                    android:id="@+id/item_time"
                    android:text="11:00-11:30"
                    android:textSize="10sp"

                    android:gravity="right|bottom"
                    android:textColor="@color/color_black_dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/show_image_res"
            android:background="@color/color_white"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_title2"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:text="大盘结束五连跌 关注创业板反弹持续性关注创业板反弹持续性"
                android:textSize="16sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/color_black"
                android:lineSpacingExtra="3dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginTop="13dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/show_image01"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:scaleType="centerInside"
                        android:background="@mipmap/infor_item_nodate"
                        />

                    <ImageView
                        android:id="@+id/show_image02"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:scaleType="centerInside"
                        android:background="@mipmap/infor_item_nodate"
                        android:layout_height="match_parent" />

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/show_image03"
                        android:layout_width="match_parent"
                        android:scaleType="centerInside"
                        android:background="@mipmap/infor_item_nodate"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/show_image_num"
                        android:drawablePadding="3dp"
                        android:background="@drawable/coner_back_gra_translation"
                        android:drawableLeft="@mipmap/white_more_pic"
                        android:text="9图"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:paddingRight="7dp"
                        android:paddingLeft="7dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:textSize="10sp"
                        android:textColor="@color/colorWhite"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:paddingRight="115dp"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginBottom="13dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/item_tag4"
                    android:text="大盘分析 "
                    android:textSize="9sp"
                    android:padding="3dp"
                    android:textColor="#888888"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/item_tag5"
                    android:visibility="gone"
                    android:text="大盘分析 "
                    android:textSize="9sp"
                    android:padding="3dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/color_red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/item_tag6"
                    android:text="大盘分析 "
                    android:textSize="9sp"
                    android:visibility="gone"
                    android:padding="3dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/color_red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/item_time2"
                    android:text="30分钟前 "
                    android:textSize="10dp"
                    android:textColor="@color/color_black_dark"
                    android:layout_marginLeft="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</layout>
