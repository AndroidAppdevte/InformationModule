<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_107"
        android:background="@color/colorWhite">

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="84dp"
            android:layout_height="73dp"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="17dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="8dp"
            android:background="#F8F8F8"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/view"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/stockname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#2E7CD7"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/stockcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:textColor="#929292"
                android:textSize="@dimen/sp_10" />
        </LinearLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="14dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:maxWidth="220dp"
            android:minWidth="200dp"
            android:textColor="#333333"
            android:textSize="@dimen/sp_15"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toRightOf="@+id/linearLayout4"
            app:layout_constraintRight_toRightOf="@+id/view"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="17dp"
            android:layout_marginStart="17dp"

            android:layout_marginTop="8dp"
            android:textSize="@dimen/sp_12"
            app:layout_constraintBottom_toTopOf="@+id/view"
            app:layout_constraintLeft_toRightOf="@+id/linearLayout4"
            app:layout_constraintTop_toBottomOf="@+id/title"
            app:layout_constraintVertical_bias="0.538" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"

            android:layout_marginStart="10dp"
            android:textColor="#AEAEAE"
            android:textSize="@dimen/sp_12"
            app:layout_constraintBottom_toBottomOf="@+id/source"
            app:layout_constraintLeft_toRightOf="@+id/source"
            app:layout_constraintTop_toTopOf="@+id/source" />

        <View
            android:id="@+id/view"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:background="#F8F8F8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </android.support.constraint.ConstraintLayout>
</layout>